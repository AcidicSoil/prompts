{
  "name": "prompts",
  "private": false,
  "type": "module",
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "build:catalog": "node --loader ts-node/esm scripts/build_catalog.ts",
    "inspect": "npx @modelcontextprotocol/inspector --config inspector.config.json",
    "prompts": "node --enable-source-maps dist/cli/main.js",
    "start": "node dist/mcp/server.js --tasks .taskmaster/tasks/tasks.json --tag master",
    "test": "npm run test:workflow && npm run test:jest",
    "test:jest": "NODE_OPTIONS=--experimental-vm-modules jest --runInBand",
    "test:planner": "npm run test:jest -- test/planner/Planner.test.ts",
    "test:prompt-handler": "npm run test:jest -- src/tools/prompt-handler.test.ts",
    "test:prompts": "npm run test:jest -- src/prompts/loader.test.ts",
    "test:resources": "npm run test:jest -- test/integration/resources.test.ts",
    "test:safety": "npm run test:jest -- src/utils/safety.test.ts",
    "test:schemas": "npm run test:jest -- src/prompts/schema.test.ts",
    "test:state": "npm run test:jest -- test/state/StateStore.test.ts",
    "test:tools": "npm run test:jest -- test/integration/tools.test.ts",
    "test:workflow": "node --loader ts-node/esm scripts/__tests__/workflow_sync.test.ts",
    "validate:metadata": "node --loader ts-node/esm scripts/validate_metadata.ts",
    "prepublishOnly": "npm run test && npm run build",
    "noop": "node -e \"process.exit(0)\"",
    "ci:pack-check": "node scripts/ci/verify-pack-contains.mjs"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.5",
    "ajv": "^6.12.6",
    "commander": "^12.1.0",
    "gray-matter": "^4.0.3",
    "js-yaml": "^4.1.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.14.9",
    "glob": "^10.3.10",
    "jest": "^29.7.0",
    "ts-node": "^10.9.2",
    "ts-jest": "^29.1.1",
    "typescript": "^5.4.0"
  },
  "mcpAllowScripts": [
    "validate:metadata",
    "build:catalog",
    "noop",
    "build",
    "test:jest",
    "lint"
  ],
  "bin": {
    "prompts": "./bin/prompts"
  },
  "version": "0.1.0",
  "files": [
    "bin",
    "dist",
    "schemas",
    "resources",
    "prompts",
    "README.md",
    "WORKFLOW.md",
    "catalog.json"
  ]
}
